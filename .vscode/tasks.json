{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust",
            "type": "shell",
            "options": {
                "env": {
                    "MDB_URL": "mongodb://localhost:27017"
                }
            },
            "command": "cargo run"
        },
        {
            "label": "ngrok",
            "type": "shell",
            "command": "ngrok http https://127.0.0.1:8000"
        },
        {
            "label": "webhook",
            "type": "shell",
            "command": "./config_webhook.sh"
        },
        {
            "label": "start",
            "type": "shell",
            "command": "echo start",
            "dependsOn": [
                "rust",
                "ngrok",
                "webhook"
            ]
        }
    ]
}